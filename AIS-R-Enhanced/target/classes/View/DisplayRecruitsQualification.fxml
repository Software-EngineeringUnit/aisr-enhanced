<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ais.DisplayRecruitsQualificationController"
            prefHeight="500.0" prefWidth="800.0" stylesheets="/styles/reviewallrecruits.css">
    <VBox spacing="10" layoutX="120.0"  alignment="CENTER">
        <Label text="Recruits Sorted By Qualification Level" styleClass="registration-heading"/>
    </VBox>
    <TableView fx:id="recruitsTableView" layoutX="14.0" layoutY="30.0" prefHeight="400.0" prefWidth="650.0">
        <columns>
            <TableColumn text="Full Name" fx:id="nameColumn"/>
            <TableColumn text="Address" fx:id="addressColumn"/>
            <TableColumn text="Phone Number" fx:id="phoneColumn"/>
            <TableColumn text="Email" fx:id="emailColumn"/>
            <TableColumn text="Username" fx:id="usernameColumn"/>
            <TableColumn text="Password" fx:id="passwordColumn"/>
            <TableColumn text="Interview Date" fx:id="interviewColumn"/>
            <TableColumn text="Qualification" fx:id="qualificationColumn"/>
            <TableColumn text="Location" fx:id="locationColumn"/>
            <TableColumn text="Departments" fx:id="departmentsColumn"/>
          </columns>
    </TableView>
    <VBox alignment="CENTER" layoutX="200.0" layoutY="450.0"> 
          <Button text="I want to Go Back" onAction="#goBack" />
    </VBox>
</AnchorPane>

