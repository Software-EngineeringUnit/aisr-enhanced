<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ais.UpdateManagementDetailsController" alignment="CENTER" stylesheets="styles/registrationpage.css">

    <VBox spacing="10" alignment="CENTER">
        <Label styleClass="registration-heading"  text="Update Management Staff Details" />
    </VBox>
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
        <HBox spacing="10">
            <Label text="Full Name:" />
            <TextField fx:id="fullNameField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Address:" />
            <TextField fx:id="addressField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Phone Number:" />
            <TextField fx:id="phoneNumberField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Email:" />
            <TextField fx:id="emailField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Username:" />
            <TextField fx:id="usernameField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Password" />
        </HBox>

        <HBox spacing="10">
            <Label text="Staff ID:" />
            <TextField fx:id="staffIdField" />
        </HBox>
 
        <HBox spacing="10">
            <Label text="Level:" />
            <ChoiceBox fx:id="levelChoiceBox" styleClass="choice-box"/>
        </HBox>
        
        <HBox spacing="10">
            <Label text="Branch:" />
            <ChoiceBox fx:id="branchChoiceBox" styleClass="choice-box"/>
        </HBox>

        <Button alignment="CENTER" onAction="#updateManagementStaff" text="Update My Details" />
        <Button alignment="CENTER" text="I want to Go Back" onAction="#goBack" />
    </VBox>
</VBox>
