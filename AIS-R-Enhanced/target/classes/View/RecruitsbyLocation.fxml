<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" stylesheets="/styles/reviewallrecruits.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ais.RecruitsByLocationController">
    <VBox alignment="CENTER" layoutX="150.0" spacing="10">
        <Label styleClass="registration-heading" text="Recruits Filtered By Location" />
    </VBox>
    <TableView fx:id="recruitsTableView" layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="650.0">
        <columns>
            <TableColumn fx:id="nameColumn" text="Full Name" />
            <TableColumn fx:id="addressColumn" text="Address" />
            <TableColumn fx:id="phoneColumn" text="Phone Number" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="usernameColumn" text="Username" />
            <TableColumn fx:id="passwordColumn" text="Password" />
            <TableColumn fx:id="interviewColumn" text="Interview Date" />
            <TableColumn fx:id="qualificationColumn" text="Qualification" />
            <TableColumn fx:id="locationColumn" text="Location" />
            <TableColumn fx:id="departmentsColumn" text="Departments" />
        </columns>     
    </TableView>
    <VBox alignment="CENTER" layoutX="200.0" layoutY="480.0"> 
        <Button onAction="#goBack" text="I want to Go Back" />
    </VBox>
</AnchorPane>
