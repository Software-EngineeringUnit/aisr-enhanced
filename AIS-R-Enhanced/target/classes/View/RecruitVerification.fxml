<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ais.RecruitVerificationController" stylesheets="styles/loginpage.css">
    <children>
        <VBox alignment="CENTER"  layoutX="100.0" layoutY="50.0" spacing="20.0" >
            <Label styleClass="heading" text="Recruit Details" /> 
            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;"> 
                <HBox>
                    <Label text="Username: " />
                    <TextField fx:id="recruitUserName" promptText="Username" />
                </HBox>
                <HBox>
                    <Label text="Password: " />
                    <PasswordField fx:id="recruitPassword" promptText="Password" />
                </HBox>
                <Button text="Verify the Recruit" onAction="#verifyRecruitClicked" />
                <Button text="I want to Go Back" onAction="#goBack" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>
